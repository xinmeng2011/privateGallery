<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp" 
        android:layout_weight="1.0"
        >

        <com.mm.privategallery.view.ScrollLockView
            android:id="@+id/lock_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/btn_modify_pwd"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/lock_modify_pwd"
		android:textColor="#FF0099FF"
		android:textSize="20dp"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginBottom="60dp"
		android:visibility="gone"
        />
    
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffe9e9e9"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/search_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffffff" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/lockview_bt_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/lockview_bt_magrin"
            android:layout_marginTop="@dimen/lockview_bt_magrin"
            android:background="@drawable/common_big_buttom_bg"
            android:text="LOADING"
            android:textColor="@color/black_font"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>